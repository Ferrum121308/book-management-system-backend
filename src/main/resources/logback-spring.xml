<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds" debug="false">

    <springProfile name="local">
        <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
        <property name="LOG_HOME" value="C:\\Users\\26554\\Projects\\IDEA\\logs"/>
        <property name="PROJECT_NAME" value="book"/>
        <property name="MODULE_NAME" value="management"/>

        <!-- 控制台输出 -->
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
                <pattern>%red(%d{yyyy-MM-dd HH:mm:ss.SSS}) %green([%thread]) %highlight(%-5level) %logger{50} - %msg%n
                </pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <!--输出到文件-->
        <!-- 时间滚动输出 level为 DEBUG 日志 -->
        <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 正在记录的日志文件的路径及文件名 -->
            <file>${LOG_HOME}/${PROJECT_NAME}/${MODULE_NAME}/${PROJECT_NAME}-${MODULE_NAME}-debug.log</file>
            <!--日志文件输出格式-->
            <encoder>
                <pattern>[%-5level] [%date{yyyy-MM-dd HH:mm:ss}] [%X{requestId}] [%thread] %logger{60} [%line] - %msg%n
                </pattern>
                <charset>UTF-8</charset> <!-- 设置字符集 -->
            </encoder>
            <!-- 日志记录器的滚动策略，按日期，按大小记录 -->
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- 日志归档 -->
                <fileNamePattern>
                    ${LOG_HOME}/${PROJECT_NAME}/${MODULE_NAME}/debug/${PROJECT_NAME}-${MODULE_NAME}-debug-%d{yyyy-MM-dd}.%i.log.gz
                </fileNamePattern>
                <maxFileSize>50MB</maxFileSize>
            </rollingPolicy>
            <!-- 此日志文件只记录debug级别的 -->
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>debug</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <!-- 时间滚动输出 level为 INFO 日志 -->
        <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 正在记录的日志文件的路径及文件名 -->
            <file>${LOG_HOME}/${PROJECT_NAME}/${MODULE_NAME}/${PROJECT_NAME}-${MODULE_NAME}-info.log</file>
            <!--日志文件输出格式-->
            <encoder>
                <pattern>[%-5level] [%date{yyyy-MM-dd HH:mm:ss}] [%X{requestId}] [%thread] %logger{60} [%line] - %msg%n
                </pattern>
                <charset>UTF-8</charset> <!-- 设置字符集 -->
            </encoder>
            <!-- 日志记录器的滚动策略，按日期，按大小记录 -->
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- 日志归档 -->
                <fileNamePattern>
                    ${LOG_HOME}/${PROJECT_NAME}/${MODULE_NAME}/info/${PROJECT_NAME}-${MODULE_NAME}-info-%d{yyyy-MM-dd}.%i.log.gz
                </fileNamePattern>
                <maxFileSize>50MB</maxFileSize>
            </rollingPolicy>
            <!-- 此日志文件只记录debug级别的 -->
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>info</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <!-- 时间滚动输出 level为 WARN 日志 -->
        <appender name="WARN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 正在记录的日志文件的路径及文件名 -->
            <file>${LOG_HOME}/${PROJECT_NAME}/${MODULE_NAME}/${PROJECT_NAME}-${MODULE_NAME}-warn.log</file>
            <!--日志文件输出格式-->
            <encoder>
                <pattern>[%-5level] [%date{yyyy-MM-dd HH:mm:ss}] [%X{requestId}] [%thread] %logger{60} [%line] - %msg%n
                </pattern>
                <charset>UTF-8</charset> <!-- 此处设置字符集 -->
            </encoder>
            <!-- 日志记录器的滚动策略，按日期，按大小记录 -->
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>
                    ${LOG_HOME}/${PROJECT_NAME}/${MODULE_NAME}/warn/${PROJECT_NAME}-${MODULE_NAME}-warn-%d{yyyy-MM-dd}.%i.log.gz
                </fileNamePattern>
                <maxFileSize>50MB</maxFileSize>
            </rollingPolicy>
            <!-- 此日志文件只记录warn级别的 -->
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>warn</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>


        <!-- 时间滚动输出 level为 ERROR 日志 -->
        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 正在记录的日志文件的路径及文件名 -->
            <file>${LOG_HOME}/${PROJECT_NAME}/${MODULE_NAME}/${PROJECT_NAME}-${MODULE_NAME}-error.log</file>
            <!--日志文件输出格式-->
            <encoder>
                <pattern>[%-5level] [%date{yyyy-MM-dd HH:mm:ss}] [%X{requestId}] [%thread] %logger{60} [%line] - %msg%n
                </pattern>
                <charset>UTF-8</charset> <!-- 此处设置字符集 -->
            </encoder>
            <!-- 日志记录器的滚动策略，按日期，按大小记录 -->
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>
                    ${LOG_HOME}/${PROJECT_NAME}/${MODULE_NAME}/error/${PROJECT_NAME}-${MODULE_NAME}-error-%d{yyyy-MM-dd}.%i.log.gz
                </fileNamePattern>
                <maxFileSize>50MB</maxFileSize>
            </rollingPolicy>
            <!-- 此日志文件只记录ERROR级别的 -->
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>

        <logger name="com.ferrum" level="debug"/>
        <logger name="org.springframework" level="warn"/>

        <root level="info">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="INFO_FILE"/>
            <appender-ref ref="WARN_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

</configuration>
